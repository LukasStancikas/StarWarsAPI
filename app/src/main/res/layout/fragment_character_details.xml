<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterDetailsSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/characterCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/characterDetailsLabelBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="right"
                        app:constraint_referenced_ids="characterDetailsBirthYearLabel,characterDetailsGenderLabel,characterDetailsNameLabel" />

                    <TextView
                        android:id="@+id/characterDetailsNameLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_character_name"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/characterDetailsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_character_label_side"
                        app:layout_constraintBottom_toBottomOf="@+id/characterDetailsNameLabel"
                        app:layout_constraintStart_toEndOf="@+id/characterDetailsLabelBarrier"
                        app:layout_constraintTop_toTopOf="@+id/characterDetailsNameLabel"
                        tools:text="Luke Skywalker" />

                    <TextView
                        android:id="@+id/characterDetailsGenderLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_character_label_top"
                        android:text="@string/label_character_gender"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/characterDetailsNameLabel" />

                    <TextView
                        android:id="@+id/characterDetailsGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_character_label_side"
                        app:layout_constraintBottom_toBottomOf="@+id/characterDetailsGenderLabel"
                        app:layout_constraintStart_toEndOf="@+id/characterDetailsLabelBarrier"
                        app:layout_constraintTop_toTopOf="@+id/characterDetailsGenderLabel"
                        tools:text="Male" />

                    <TextView
                        android:id="@+id/characterDetailsBirthYearLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_character_label_top"
                        android:text="@string/label_character_birthyear"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/characterDetailsGender" />

                    <TextView
                        android:id="@+id/characterDetailsBirthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_character_label_side"
                        app:layout_constraintBottom_toBottomOf="@+id/itemCharacterBirthYearLabel"
                        app:layout_constraintStart_toEndOf="@+id/characterDetailsLabelBarrier"
                        app:layout_constraintTop_toTopOf="@+id/characterDetailsBirthYearLabel"
                        tools:text="16BYY" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
